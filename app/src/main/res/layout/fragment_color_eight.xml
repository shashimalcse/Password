<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorEight">

    <GridLayout
        android:id="@+id/GridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:columnCount="4"
        android:rowCount="2"
        tools:context=".GridLayoutActivity">

        <Button
            android:id="@+id/color8_red"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#ff012b"
            android:padding="40dp" />

        <Button
            android:id="@+id/color8_blue"
            android:layout_row="0"
            android:layout_column="1"

            android:background="#0101ff"
            android:padding="40dp" />

        <Button
            android:id="@+id/color8_yellow"
            android:layout_row="0"

            android:layout_column="2"
            android:background="#fbff01"
            android:padding="40dp" />

        <Button
            android:id="@+id/color8_green"
            android:layout_row="0"
            android:layout_column="3"
            android:background="#0ca41c"
            android:padding="40dp" />

        <Button
            android:id="@+id/color8_orange"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#fa7f00"
            android:padding="40dp" />

        <Button
            android:id="@+id/color8_purple"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#ce00fa"
            android:padding="40dp" />

        <Button
            android:id="@+id/color8_black"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#000000"
            android:padding="40dp" />

        <Button
            android:id="@+id/color8_pink"
            android:layout_row="1"
            android:layout_column="3"
            android:background="#fa008c"
            android:padding="40dp" />

    </GridLayout>


</FrameLayout>