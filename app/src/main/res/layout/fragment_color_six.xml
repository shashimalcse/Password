<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorSix">

    <!-- TODO: Update blank fragment layout -->


    <GridLayout
        android:id="@+id/GridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:columnCount="3"
        android:rowCount="2"
        tools:context=".GridLayoutActivity">

        <Button
            android:id="@+id/color6_red"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#ff012b"
            android:padding="40dp" />

        <Button
            android:id="@+id/color6_blue"
            android:layout_row="0"
            android:layout_column="1"

            android:background="#0101ff"
            android:padding="40dp" />

        <Button
            android:id="@+id/color6_yellow"
            android:layout_row="1"

            android:layout_column="0"
            android:background="#fbff01"
            android:padding="40dp" />

        <Button
            android:id="@+id/color6_green"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#0ca41c"
            android:padding="40dp" />

        <Button
            android:id="@+id/color6_pink"
            android:layout_row="1"

            android:layout_column="2"
            android:background="#fa008c"
            android:padding="40dp" />

        <Button
            android:id="@+id/color6_purple"
            android:layout_row="0"
            android:layout_column="2"
            android:background="#ce00fa"
            android:padding="40dp" />

    </GridLayout>

</FrameLayout>